# Server
PORT=4000
NODE_ENV=development

# Database
# Use either MONGODB_URI or MONGO_URI
MONGODB_URI=mongodb://127.0.0.1:27017/social_commerce_saas
# MONGO_URI=mongodb://127.0.0.1:27017/social_commerce_saas

# Auth
JWT_SECRET=change_this_in_production
JWT_EXPIRES_IN=7d

# IND blockchain node proxy (optional)
# If set, backend /api/v1/web3/* routes proxy to the IND node instead of the demo chain
# Example: http://localhost:4100
IND_NODE_BASE=
# Difficulty hint for UI (optional)
IND_NODE_DIFFICULTY=3

# Uploads
# Select provider: 'cloudinary' or 's3'
UPLOAD_PROVIDER=cloudinary

# Cloudinary settings (required if UPLOAD_PROVIDER=cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 settings (required if UPLOAD_PROVIDER=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
S3_BUCKET=

# Payments: Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Payments: Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
